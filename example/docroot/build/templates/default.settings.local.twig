/**
* Database settings:
*/
$databases['default']['default'] = array (
'database' => '{{ database.database }}',
'username' => '{{ database.username }}',
'password' => '{{ database.password }}',
'prefix' => '{{ database.prefix }}',
'host' => '{{ database.host }}',
'port' => '{{ database.port }}',
'namespace' => '{{ database.namespace }}',
'driver' => '{{ database.driver }}',
);

/**
* Salt for one-time login links, cancel links, form tokens, etc.
*/
$settings['hash_salt'] = '{{ hash_salt }}';

/**
* Load services definition file.
*/
$settings['container_yamls'][] = $app_root . '/' . $site_path . '/services.yml';

/**
* The active installation profile.
*/
$settings['install_profile'] = '{{ site_configuration.profile }}';

/**
* Load local development override configuration, if available.
*
* Use settings.local.php to override variables on secondary (staging,
* development, etc) installations of this site. Typically used to disable
* caching, JavaScript/CSS compression, re-routing of outgoing emails, and
* other things that should not happen on development and testing sites.
*
* Keep this code block at the end of this file to take full effect.
*/
if (file_exists($app_root . '/sites/' . '/settings.local.php')) {
include $app_root . '/sites/' . '/settings.local.php';
}

// Load settings.local.php from site.
if (file_exists($app_root . '/' . $site_path . '/settings.local.php')) {
include $app_root . '/' . $site_path . '/settings.local.php';
}

{# Changing The Storage Location of the Sync Directory #}
/**
* CONFIG_SYNC_DIRECTORY config.
*/
$config_directories[CONFIG_SYNC_DIRECTORY] = '{{ site_configuration.config_dir }}';

/**
* Configuration overrides.
*/
$config['system.site']['mail'] = '{{ site_configuration.mail }}';

/**
* Environment Indicator.
*/
{% if environment == 'local' %}
    {% set bg_color, fg_color = '#829356', '#FFFFFF' %}
{% elseif environment == 'stage' %}
    {% set bg_color, fg_color = '#C2571A', '#FFFFFF' %}
{% else %}
    {% set bg_color, fg_color = '#9A2617', '#FFFFFF' %}
{% endif %}
